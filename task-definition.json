{
    "family": "zapscale-saas-task",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "zapscale-saas-container",
            "image": "<aws_account_id>.dkr.ecr.<aws_region>.amazonaws.com/zapscale-saas:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "secrets": [
                {
                    "name": "MONGODB_URI",
                    "valueFrom": "<arn_of_your_mongodb_secret>"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/zapscale-saas",
                    "awslogs-region": "<aws_region>",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}
